	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "JS Sample",
			"cwd": "${workspaceFolder}/samples/javascript",
			"program": "${workspaceFolder}/tsc/lib/main.js",
			"args": [
				 "-p", "jsconfig.json",
				 "--outputFormat", "line"
			],
			"preLaunchTask": "npm: watch",
			"sourceMaps": true,
			"outputCapture": "std",
			"outFiles": [
				"${workspaceFolder}/tsc/lib/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "TS Sample",
			"cwd": "${workspaceFolder}/samples/typescript",
			"program": "${workspaceFolder}/tsc/lib/main.js",
			"args": [
				 "-p", "tsconfig.json",
				 "--outputFormat", "line",
				 "--installTypings"
			],
			"preLaunchTask": "npm: watch",
			"sourceMaps": true,
			"outputCapture": "std",
			"outFiles": [
				"${workspaceFolder}/tsc/lib/**/*.js"
			]
		},
