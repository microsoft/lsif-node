{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
        "sourceMap": true,
		"declaration": true,
		"composite": true,
		"sourceRoot": "../src",
		"rootDir": "./src",
		"outDir": "./lib",
		"tsBuildInfoFile":"./lib/compile.tsbuildInfo"
	},
	"include": [
		"src/**/*.ts"
	]
}